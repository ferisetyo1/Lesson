<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/btn_circle_yellow"
            android:scaleType="center"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/modal_namaPengajar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Budi Sudarsono"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/modal_namaPelajaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Matematika"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/modal_namaSekolah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="SMAN 2 Malang"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_downloadpdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_cloud_download_black_24dp"
                android:drawablePadding="8dp"
                android:text="Download File PDF"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_share_black_24dp"
                android:drawablePadding="8dp"
                android:text="Share File Rekaman"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/tv_hapus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_delete_black_24dp"
                android:drawablePadding="8dp"
                android:text="Hapus Rekaman"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:drawableTint="@color/white" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>